{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*.ts", "client/src/**/*.tsx"],
  "exclude": ["node_modules"]
}
